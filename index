    <script>
        // --- UTILITY FUNCTIONS ---

        // Label Wrapping Logic (Mandatory >16 chars)
        function wrapLabel(label) {
            if (label.length <= 16) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= 16) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // Shared Tooltip Configuration (Mandatory)
        const commonTooltipOptions = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // Shared Chart Options
        Chart.defaults.font.family = "'Roboto', sans-serif";
        Chart.defaults.color = '#64748b';

        // --- CHART 1: CPC Analysis (Bar Chart) ---
        const cpcCtx = document.getElementById('cpcBarChart').getContext('2d');
        const cpcLabelsRaw = [
            'Tier 1: Brand Advocacy (Defensive)', 
            'Tier 2: Category Integration (Growth)', 
            'Tier 3: Market Acquisition (Aggressive)'
        ];
        const cpcLabelsProcessed = cpcLabelsRaw.map(wrapLabel);

        new Chart(cpcCtx, {
            type: 'bar',
            data: {
                labels: cpcLabelsProcessed,
                datasets: [{
                    label: 'Estimated Cost Per Click (USD)',
                    data: [0.35, 8.50, 14.00], // Average of ranges
                    backgroundColor: [
                        '#10b981', // Emerald (Tier 1)
                        '#0ea5e9', // Sky (Tier 2)
                        '#6366f1'  // Indigo (Tier 3)
                    ],
                    borderRadius: 8,
                    barPercentage: 0.6,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: commonTooltipOptions,
                    legend: { display: false },
                    title: {
                        display: true,
                        text: 'Cost Scaling by Strategic Aggression',
                        font: { size: 16, weight: 'bold' },
                        padding: { bottom: 20 }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Cost Per Click ($)' },
                        grid: { color: '#e2e8f0' }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // --- CHART 2: Executive Matrix (Radar Chart) ---
        const radarCtx = document.getElementById('strategyRadarChart').getContext('2d');
        // Labels: Risk Profile, Capital Required, Market Impact, Lead Quality
        const radarLabelsRaw = ['Risk Profile', 'Capital Required', 'Market Impact', 'Cost Efficiency'];
        const radarLabelsProcessed = radarLabelsRaw.map(wrapLabel);

        new Chart(radarCtx, {
            type: 'radar',
            data: {
                labels: radarLabelsProcessed,
                datasets: [
                    {
                        label: 'Tier 1: Advocacy',
                        data: [1, 2, 4, 10], // Low Risk, Low Cap, Low Impact (on growth), High Efficiency
                        backgroundColor: 'rgba(16, 185, 129, 0.2)',
                        borderColor: '#10b981',
                        pointBackgroundColor: '#10b981',
                        borderWidth: 2
                    },
                    {
                        label: 'Tier 2: Integration',
                        data: [5, 6, 7, 7], // Med Risk, Med Cap, Good Impact, Good Efficiency
                        backgroundColor: 'rgba(14, 165, 233, 0.2)',
                        borderColor: '#0ea5e9',
                        pointBackgroundColor: '#0ea5e9',
                        borderWidth: 2
                    },
                    {
                        label: 'Tier 3: Acquisition',
                        data: [9, 9, 9, 3], // High Risk, High Cap, High Impact, Low Efficiency (Expensive)
                        backgroundColor: 'rgba(99, 102, 241, 0.2)',
                        borderColor: '#6366f1',
                        pointBackgroundColor: '#6366f1',
                        borderWidth: 2
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: commonTooltipOptions,
                    legend: { position: 'bottom' },
                    title: {
                        display: true,
                        text: 'Multivariate Strategic Comparison',
                        font: { size: 16, weight: 'bold' }
                    }
                },
                scales: {
                    r: {
                        angleLines: { color: '#e2e8f0' },
                        grid: { color: '#e2e8f0' },
                        pointLabels: {
                            font: { size: 12, weight: 'bold' },
                            color: '#475569'
                        },
                        ticks: { display: false, max: 10 }
                    }
                }
            }
        });

        // --- CHART 3: Implementation Roadmap (Floating Bar / Gantt) ---
        const roadmapCtx = document.getElementById('roadmapChart').getContext('2d');
        const roadmapLabelsRaw = [
            'Phase 1: Infrastructure & Readiness', 
            'Phase 2: Foundational Advocacy', 
            'Phase 3: High-Conversion Assets', 
            'Phase 4: Analysis & Scaling'
        ];
        const roadmapLabelsProcessed = roadmapLabelsRaw.map(wrapLabel);

        new Chart(roadmapCtx, {
            type: 'bar',
            data: {
                labels: roadmapLabelsProcessed,
                datasets: [{
                    label: 'Implementation Duration',
                    // Data format for floating bars: [start, end]
                    data: [
                        [0, 5],   // Days 1-5
                        [5, 10],  // Days 6-10
                        [10, 20], // Days 11-20
                        [20, 30]  // Days 21-30
                    ],
                    backgroundColor: [
                        '#94a3b8', // Slate (Infra)
                        '#10b981', // Emerald (Advocacy)
                        '#0ea5e9', // Sky (Assets)
                        '#6366f1'  // Indigo (Scaling)
                    ],
                    borderRadius: 4,
                    barPercentage: 0.5
                }]
            },
            options: {
                indexAxis: 'y', // Horizontal Bar
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            },
                            label: function(context) {
                                const val = context.raw;
                                return ` Days ${val[0] + 1} to ${val[1]}`;
                            }
                        }
                    },
                    legend: { display: false },
                    title: {
                        display: true,
                        text: '30-Day Execution Timeline',
                        font: { size: 16, weight: 'bold' }
                    }
                },
                scales: {
                    x: {
                        min: 0,
                        max: 30,
                        title: { display: true, text: 'Day of Implementation' },
                        grid: { color: '#e2e8f0' }
                    },
                    y: {
                        grid: { display: false }
                    }
                }
            }
        });
    </script>
</body>
